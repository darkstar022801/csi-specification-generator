<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSI Specification Generator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DocumentGenerator.styles.css" asp-append-version="true" />
    <style>
        .primary-background-color {
            background-color: #f79238 !important;
        }

        .secondary-background-color {
            background-color: #52504e !important;
        }

        .fixed-top {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 1030;
        }
    </style>
</head>
<body class="secondary-background-color">
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3 primary-background-color">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>CSI Specification Builder</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Form" asp-action="Index">Form</a>
                            </li>
                        </ul>
                    </div>*@
            </div>
        </nav>
    </header>
    <div class="container" style="padding-top: 4rem; padding-bottom: 3rem;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div style="bottom:0;position: fixed; width:100%;">
        <!-- Footer -->
        <footer class="text-center text-lg-start bg-body-tertiary footer primary-background-color">
            <section class="d-flex justify-content-center justify-content-lg-between">

                <!-- Left -->
                <div style="padding-left: 1rem;">
                    <span>info@perfsports.com</span>
                </div>
                <!-- Left -->
                <!-- Copyright -->
                <div class="text-center">
                    <a class="text-reset fw-bold" href="https://perfsports.com/">perfsports.com</a>
                </div>
                <!-- Copyright -->
                <!-- Right -->
                <div style="padding-right: 1rem;">
                    <span>800-848-8034</span>
                </div>
                <!-- Right -->

            </section>
        </footer>
        <!-- Footer -->
    </div>
    @*<div style="bottom:0;position: fixed; width:100%; background-color:white;">
            <hr style="width:100%;" />
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
            </footer>
        </div>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

